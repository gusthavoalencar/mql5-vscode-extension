{
  "scopeName": "source.mql5",
  "patterns": [
    {
      "name": "comment.line.double-slash.mql5",
      "match": "//.*$"
    },
    {
      "name": "comment.block.mql5",
      "begin": "/\\*",
      "end": "\\*/"
    },
    {
      "name": "keyword.control.mql5",
      "match": "\\b(if|else|while|for|return|switch|case|break|continue)\\b"
    },
    {
      "name": "keyword.declaration.mql5",
      "match": "\\b(int|double|float|char|string|bool|void)\\b"
    },
    {
      "name": "support.function.mql5",
      "match": "\\b(Print|OrderSend|OrderClose|iClose|iOpen|iHigh|iLow)\\b"
    },
    {
      "name": "string.quoted.double.mql5",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "constant.numeric.mql5",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    }
  ]
}
